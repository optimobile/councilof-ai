* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', sans-serif;
  background: #0a0a0a;
  color: #ffffff;
}

.app {
  min-height: 100vh;
}

.container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 20px;
}

.hero {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 100px 20px;
  text-align: center;
}

.hero h1 {
  font-size: 4rem;
  font-weight: 800;
  margin-bottom: 20px;
}

.hero .subtitle {
  font-size: 1.8rem;
  margin-bottom: 15px;
}

.hero .description {
  font-size: 1.2rem;
  margin-bottom: 40px;
  max-width: 800px;
  margin-left: auto;
  margin-right: auto;
}

.btn-primary {
  background: #ffffff;
  color: #667eea;
  border: none;
  padding: 18px 40px;
  font-size: 1.1rem;
  font-weight: 600;
  border-radius: 50px;
  cursor: pointer;
  transition: all 0.3s ease;
}

.btn-primary:hover {
  transform: translateY(-2px);
  box-shadow: 0 6px 20px rgba(0,0,0,0.3);
}

.council {
  padding: 80px 20px;
  background: #111;
}

.council h2 {
  text-align: center;
  font-size: 2.5rem;
  margin-bottom: 50px;
  color: #667eea;
}

.council-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  gap: 25px;
}

.council-card {
  background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);
  border: 2px solid #667eea;
  border-radius: 15px;
  padding: 25px;
  position: relative;
  transition: all 0.3s ease;
}

.council-card:hover {
  transform: translateY(-5px);
  box-shadow: 0 10px 30px rgba(102, 126, 234, 0.3);
}

.council-card.veto {
  border-color: #ffd700;
}

.council-card .number {
  position: absolute;
  top: 15px;
  right: 15px;
  background: #667eea;
  color: white;
  width: 35px;
  height: 35px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
}

.council-card h3 {
  font-size: 1.4rem;
  margin-bottom: 10px;
}

.council-card .platform {
  color: #667eea;
  font-size: 0.95rem;
  margin-bottom: 8px;
}

.council-card .model {
  color: #999;
  font-size: 0.85rem;
  margin-bottom: 12px;
}

.veto-badge {
  background: #ffd700;
  color: #000;
  padding: 5px 12px;
  border-radius: 20px;
  font-size: 0.8rem;
  font-weight: 600;
  margin-top: 10px;
}

.features {
  padding: 80px 20px;
  background: #0a0a0a;
}

.features h2 {
  text-align: center;
  font-size: 2.5rem;
  margin-bottom: 50px;
  color: #667eea;
}

.features-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: 40px;
}

.feature {
  text-align: center;
  padding: 30px;
  background: #111;
  border-radius: 15px;
  transition: all 0.3s ease;
}

.feature:hover {
  border-color: #667eea;
  transform: translateY(-5px);
}

.feature .icon {
  font-size: 3rem;
  margin-bottom: 20px;
}

.feature h3 {
  font-size: 1.5rem;
  margin-bottom: 15px;
}

footer {
  background: #111;
  padding: 40px 20px;
  text-align: center;
  border-top: 1px solid #333;
}

@media (max-width: 768px) {
  .hero h1 { font-size: 2.5rem; }
  .council-grid, .features-grid { grid-template-columns: 1fr; }
}
